{
  "manifest_version": 2,

  "name": "Radio Reddit",
  "description": "Allows you to continously play music on a music subreddit",
  "version": "1.0",

  "icons": {
        "16":"Radio-Reddit-Icon-Trimmed.png",
        "48":"Radio-Reddit-Icon-Trimmed.png",
        "128":"Radio-Reddit-Icon-Trimmed.png"
      },

  "browser_action": {
    "default_icon": "Radio-Reddit-Icon-Trimmed.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },

  "content_scripts": [{
     "matches": [
       "https://www.reddit.com/*",
       "http://www.reddit.com/*"
     ],
     "js": [
       "jquery-3.0.0.min.js",
       "init.js",
       "soundcloudApi.js",
       "content.js"
     ]
  }],

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
